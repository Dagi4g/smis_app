
#:import Window kivy.core.window.Window

<Label>:
    color: (0.1, 0.3, 0.6, 1)  # watery blue labels
    font_size: 20

<TextInput>:
    multiline: False
    padding: [10, 10]
    background_color: (1,1,1,1)
    foreground_color: (0.1,0.3,0.6,1)
    font_size: 18

<Button>:
    background_color: (0.4,0.7,1,1)  # watery blue button
    color: (1,1,1,1)
    font_size: 18
    size_hint_y: None
    height: 44
    bold: True

<Spinner>:
    background_color: (1,1,1,1)
    color: (0.1,0.3,0.6,1)
    font_size: 18

<GridLayout>:
    padding: 20
    spacing: 15

